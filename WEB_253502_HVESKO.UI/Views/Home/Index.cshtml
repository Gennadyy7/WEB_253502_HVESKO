@model List<string>﻿

@{
    ViewBag.Title = "Index";
}

<h1>@ViewData["Headline"]</h1> <!-- Используем ViewData для отображения заголовка -->
<h3>Список</h3>
<ol type="A">
    @for (int i = 0; i < Model.Count; i++)
    {
        <li>@Model[i]</li> <!-- Динамическое наполнение списка -->
    }
</ol>
<h3>Форма</h3>
<form method="post" action="/submit">
    <div class="form-check">
        <input class="form-check-input" type="checkbox" name="checkbox1" id="checkbox1">
        <label class="form-check-label" for="checkbox1">Чек-бокс 1</label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="checkbox" name="checkbox2" id="checkbox2">
        <label class="form-check-label" for="checkbox2">Чек-бокс 2</label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="radio" id="radio1" value="1">
        <label class="form-check-label" for="radio1">Радио-1</label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="radio" id="radio2" value="2">
        <label class="form-check-label" for="radio2">Радио-2</label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="radio" id="radio3" value="3">
        <label class="form-check-label" for="radio3">Радио-3</label>
    </div>
    <div class="mb-3">
        <label for="selectDemo" class="form-label">Выберите элемент:</label>
        <select id="selectDemo" name="selectedId" class="form-select" asp-items="ViewBag.ItemSelectList"></select>
    </div>
    <div class="mb-3">
        <label for="login" class="form-label">Логин:</label>
        <input type="text" class="form-control" id="login" name="login" placeholder="Введите имя">
    </div>
    <div class="mb-3">
        <label for="password" class="form-label">Пароль:</label>
        <input type="password" class="form-control" id="password" name="password" placeholder="Введите пароль">
    </div>
    <div class="button-container">
        <button type="submit" class="btn btn-primary">Отправить</button>
    </div>
</form>